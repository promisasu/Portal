<div class="container-fluid">
    <br>
    <ol class="breadcrumb">
        <li>
            <a href="/">
                Dashboard
            </a>
        </li>
        <li class="active">
            Trial: {{ trial.name }}
        </li>
    </ol>
    <div class="row">
        <div class="col-sm-12 col-md-5 col-lg-6 col-xl-6">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title text-center">
                        {{ trial.name }} Trial
                    </h4>
                    <p class="card-text">
                        {{ trial.description }}
                    </p>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th scope="row">
                                    IRB ID
                                </th>
                                <td>
                                    {{ trial.IRBID }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    IRB Start Date
                                </th>
                                <td>
                                    {{ trial.start }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    IRB End Date
                                </th>
                                <td>
                                    {{ trial.end }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    Patient Count
                                </th>
                                <td>
                                    {{ patientCount }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    Noncompliant Count
                                </th>
                                <td>
                                    {{ complianceCount.[0] }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-7 col-lg-6 col-xl-6">
            <div class="card">
                <canvas id="trialChart" height="200%"></canvas>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="card">
                <div class="card-block">
                    <div class="row">
                        <div class="col-sm-3">
                            <h4 class="card-title">
                                Patients
                            </h4>
                        </div>
                        <div class="col-xl-2 col-md-3 col-xl-offset-7 col-md-offset-6">
                            <button type="button" class="btn btn-primary text-uppercase" data-toggle="modal" data-target="#addPatient">
                                Enroll New Patient
                            </button>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Patient Pin
                                </th>
                                <th>
                                    Compliance Status
                                </th>
                                <th>
                                    Stage
                                </th>
                                <th>
                                    Total Missed Past Week
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#unless patients.length}}
                                <tr>
                                    <td colspan="8">
                                        <div class="card card-inverse card-info text-center card-block">
                                            <div class="card-title">
                                                No Patients
                                            </div>
                                            <div class="card-text">
                                                Please add some patients to this trial.
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {{/unless}}
                            {{#each patients}}
                                <tr class="table-{{ statusType }}">
                                    <td>
                                        <a href="/patient/{{ pin }}">
                                            {{ pin }}
                                            <i class="fa fa-search"></i>
                                        </a>
                                    </td>
                                    <td>
                                        {{ status }}
                                    </td>
                                    <td>
                                        {{ stage }}
                                    </td>
                                    <td>
                                        {{ totalMissed }}
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{{> notify-patient}}
{{> add-patient}}

<script>
    window.data = JSON.parse('{{{ graphData }}}');
</script>
<script src="/static/script/trial.js" defer></script>
